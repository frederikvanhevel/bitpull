{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./lib",
    "isolatedModules": false,
    "strict": true,
    "moduleResolution": "node",
    "declaration": true,
    "preserveSymlinks": true,
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],
    "baseUrl": "src",
    "types": [
      "node",
      "@types/jest"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "**/lib/*"
  ]
}