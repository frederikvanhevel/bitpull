{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "lib",
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],
    "paths": {
      "*": [
        "./typings/*"
      ]
    },
    "baseUrl": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true
  },
  "exclude": [
    "**/lib/*",
    // "src/**/*",
    "node_modules"
  ],
  "include": [
    "src/typedefs.ts"
  ]
}