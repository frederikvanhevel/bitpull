{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./build",
    "isolatedModules": false,
    "strict": true,
    "moduleResolution": "node",
    "declaration": true,
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],
    "paths": {
      "components/*": [
        "components/*"
      ],
      "controllers/*": [
        "controllers/*"
      ],
      "services/*": [
        "services/*"
      ],
      "models/*": [
        "models/*"
      ],
      "utils/*": [
        "utils/*"
      ],
      "typedefs/*": [
        "typedefs/*"
      ]
    },
    "baseUrl": "src",
    "types": [
      "node",
      "@types/jest"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "**/build/*"
  ]
}